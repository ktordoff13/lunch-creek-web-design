---
import { Image } from 'astro:assets';
import profile from '../../assets/profile.png';
const team = [
  {
    name: 'Jakub Tordoff',
    image: 'src/assets/profile.png',
    job: 'OWNER/DEVELOPER',
  },
];
---

<section class="py-6 sm:py-6">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="sm:space-8 space-y-12">
      <!-- <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Meet our team</h2> -->
      <ul role="list" class="grid grid-cols-1 gap-8 sm:grid-cols-1 lg:grid-cols-1">
        <div class="space-y-6">
          <Image
            class="mx-auto h-auto w-40 rounded-full"
            format="webp"
            width={300}
            height={300}
            src={profile}
            alt="Profile image"
          />
          <div class="text-center">
            <h3 class="text-lg font-medium">Jakub Tordoff</h3>
            <p class="text-base text-primary-950/70 dark:text-primary-200/70">OWNER/DEVELOPER</p>
          </div>
        </div>
      </ul>
    </div>
  </div>
</section>
